---
import FeatureShowcase from '../react/FeatureShowcase';
---

<section class="py-16 md:py-24 bg-slate-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-16">
      <div class="inline-block px-3 py-2 mb-3 md:mb-4 bg-blue-100 text-blue-800 text-xs md:text-sm font-semibold rounded-full">
        Our Services
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-slate-900 mb-4 md:mb-6">
        Comprehensive <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600">Solutions</span>
      </h2>
      <p class="text-lg md:text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed px-4">
        End-to-end logistics and manufacturing services powered by cutting-edge technology 
        and tailored to your unique business needs.
      </p>
    </div>

    <FeatureShowcase client:load />
    
    <!-- Bottom CTA -->
    <div class="text-center mt-12 md:mt-16">
      <a 
        href="/capabilities" 
        class="inline-flex items-center px-6 md:px-8 py-3 md:py-4 text-sm md:text-base font-semibold text-white bg-linear-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-lg shadow-lg hover:shadow-xl transition-all group w-full sm:w-auto mx-4 sm:mx-0"
      >
        Explore All Capabilities
        <svg class="w-4 h-4 md:w-5 md:h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
